# Smart Content Recommendations - Environment Variables Example
# Copy this file to .env and update with your actual values

# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/smart_content
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=smart_content

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_CACHE_TTL=3600

# Application Settings
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
API_V1_STR=/api/v1
PROJECT_NAME=Smart Content Recommendations

# Debug and Logging
DEBUG=true
LOG_LEVEL=INFO

# Recommendation Settings
MAX_RECOMMENDATIONS_PER_REQUEST=100
ENABLE_AB_TESTING=true
CACHE_ALGORITHM_RESULTS=true

# Celery (Background Tasks)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Monitoring
ENABLE_METRICS=true
SENTRY_DSN=

# External APIs (if needed)
OPENAI_API_KEY=
HUGGINGFACE_API_KEY=