{
  "family": "smart-content-recommendations",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "2048",
  "executionRoleArn": "arn:aws:iam::YOUR_ACCOUNT_ID:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::YOUR_ACCOUNT_ID:role/smart-content-task-role",
  "containerDefinitions": [
    {
      "name": "smart-content-api",
      "image": "YOUR_ACCOUNT_ID.dkr.ecr.us-east-1.amazonaws.com/smart-content-recommendations:latest",
      "portMappings": [
        {
          "containerPort": 8000,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "environment": [
        {
          "name": "ENVIRONMENT",
          "value": "production"
        },
        {
          "name": "DEBUG",
          "value": "false"
        },
        {
          "name": "AWS_REGION",
          "value": "us-east-1"
        },
        {
          "name": "USE_AWS_SECRETS",
          "value": "true"
        },
        {
          "name": "AWS_SECRET_NAME",
          "value": "smart-content-recommendations/prod"
        },
        {
          "name": "CLOUDWATCH_LOG_GROUP",
          "value": "/aws/ecs/smart-content-recommendations"
        }
      ],
      "secrets": [
        {
          "name": "DATABASE_URL",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:YOUR_ACCOUNT_ID:secret:smart-content-recommendations/prod:DATABASE_URL::"
        },
        {
          "name": "REDIS_URL",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:YOUR_ACCOUNT_ID:secret:smart-content-recommendations/prod:REDIS_URL::"
        },
        {
          "name": "SECRET_KEY",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:YOUR_ACCOUNT_ID:secret:smart-content-recommendations/prod:SECRET_KEY::"
        },
        {
          "name": "CELERY_BROKER_URL",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:YOUR_ACCOUNT_ID:secret:smart-content-recommendations/prod:CELERY_BROKER_URL::"
        },
        {
          "name": "CELERY_RESULT_BACKEND",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:YOUR_ACCOUNT_ID:secret:smart-content-recommendations/prod:CELERY_RESULT_BACKEND::"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/aws/ecs/smart-content-recommendations",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "api"
        }
      },
      "healthCheck": {
        "command": ["CMD-SHELL", "curl -f http://localhost:8000/health || exit 1"],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    },
    {
      "name": "smart-content-celery-worker",
      "image": "YOUR_ACCOUNT_ID.dkr.ecr.us-east-1.amazonaws.com/smart-content-recommendations:latest",
      "command": ["celery", "-A", "app.tasks.celery_app", "worker", "--loglevel=info", "--concurrency=4"],
      "essential": true,
      "environment": [
        {
          "name": "ENVIRONMENT",
          "value": "production"
        },
        {
          "name": "DEBUG",
          "value": "false"
        },
        {
          "name": "AWS_REGION",
          "value": "us-east-1"
        }
      ],
      "secrets": [
        {
          "name": "DATABASE_URL",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:YOUR_ACCOUNT_ID:secret:smart-content-recommendations/prod:DATABASE_URL::"
        },
        {
          "name": "REDIS_URL",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:YOUR_ACCOUNT_ID:secret:smart-content-recommendations/prod:REDIS_URL::"
        },
        {
          "name": "CELERY_BROKER_URL",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:YOUR_ACCOUNT_ID:secret:smart-content-recommendations/prod:CELERY_BROKER_URL::"
        },
        {
          "name": "CELERY_RESULT_BACKEND",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:YOUR_ACCOUNT_ID:secret:smart-content-recommendations/prod:CELERY_RESULT_BACKEND::"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/aws/ecs/smart-content-recommendations",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "celery-worker"
        }
      }
    },
    {
      "name": "smart-content-celery-beat",
      "image": "YOUR_ACCOUNT_ID.dkr.ecr.us-east-1.amazonaws.com/smart-content-recommendations:latest",
      "command": ["celery", "-A", "app.tasks.celery_app", "beat", "--loglevel=info"],
      "essential": false,
      "environment": [
        {
          "name": "ENVIRONMENT",
          "value": "production"
        },
        {
          "name": "DEBUG",
          "value": "false"
        },
        {
          "name": "AWS_REGION",
          "value": "us-east-1"
        }
      ],
      "secrets": [
        {
          "name": "DATABASE_URL",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:YOUR_ACCOUNT_ID:secret:smart-content-recommendations/prod:DATABASE_URL::"
        },
        {
          "name": "REDIS_URL",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:YOUR_ACCOUNT_ID:secret:smart-content-recommendations/prod:REDIS_URL::"
        },
        {
          "name": "CELERY_BROKER_URL",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:YOUR_ACCOUNT_ID:secret:smart-content-recommendations/prod:CELERY_BROKER_URL::"
        },
        {
          "name": "CELERY_RESULT_BACKEND",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:YOUR_ACCOUNT_ID:secret:smart-content-recommendations/prod:CELERY_RESULT_BACKEND::"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/aws/ecs/smart-content-recommendations",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "celery-beat"
        }
      }
    }
  ]
}