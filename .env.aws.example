# AWS Production Environment Configuration
# Copy this to .env and fill in your actual AWS values

# Application Environment
ENVIRONMENT=production
DEBUG=false
APP_NAME=Smart Content Recommendations
APP_VERSION=1.0.0

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
AWS_PROFILE=default

# AWS RDS Database Configuration
DATABASE_URL=postgresql+asyncpg://username:password@your-rds-endpoint.amazonaws.com:5432/smart_content
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
DATABASE_SSL_MODE=require

# AWS ElastiCache Redis Configuration
REDIS_URL=redis://your-elasticache-endpoint.cache.amazonaws.com:6379
REDIS_SSL=true
REDIS_CACHE_TTL=3600

# Celery with ElastiCache
CELERY_BROKER_URL=redis://your-elasticache-endpoint.cache.amazonaws.com:6379/0
CELERY_RESULT_BACKEND=redis://your-elasticache-endpoint.cache.amazonaws.com:6379/0

# AWS S3 Storage
S3_BUCKET_NAME=your-s3-bucket-name
S3_USE_SSL=true

# AWS Secrets Manager
USE_AWS_SECRETS=true
AWS_SECRET_NAME=smart-content-recommendations/prod

# AWS CloudWatch Logging
CLOUDWATCH_LOG_GROUP=/aws/ecs/smart-content-recommendations
CLOUDWATCH_LOG_STREAM=prod

# Security
SECRET_KEY=your-super-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Performance Settings
API_RATE_LIMIT=5000
MAX_CONTENT_PER_PAGE=100
RECOMMENDATION_BATCH_SIZE=200
MIN_INTERACTIONS_FOR_RECOMMENDATIONS=5

# Health Check Configuration
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_INTERVAL=30